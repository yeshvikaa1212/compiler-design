%{
#include <stdio.h>
int ln = 0;
extern FILE *yyin, *yyout;
%}

%%
.* { ln++; fprintf(yyout, "\n%d:%s", ln, yytext); }
%%

int yywrap() {
    return 1;  // Indicate that there are no more files to parse
}

int main() {
    yyin = fopen("simple.txt", "r");
    yyout = fopen("out.txt", "w");
    yylex();
    fclose(yyin);
    fclose(yyout);
    return 0;
}

output: 
1:#include <stdio.h>


2:int main() {

3:    int num, reversedNum = 0, originalNum, remainder;


4:    printf("Enter an integer: ");

5:    scanf("%d", &num);


6:    originalNum = num;


7:    // Reversing the number

8:    while (num != 0) {

9:        remainder = num % 10;

10:        reversedNum = reversedNum * 10 + remainder;

11:        num /= 10;

12:    }


13:    // Checking if the original number is equal to its reverse

14:    if (originalNum == reversedNum)

15:        printf("%d is a palindrome.\n", originalNum);

16:    else

17:        printf("%d is not a palindrome.\n", originalNum);


18:    return 0;

19:}

